@model User

<div class="container mt-4 mb-4 p-3 d-flex justify-content-center profile"> 
    <div class="card p-4"> 
        <div class=" image d-flex flex-column justify-content-center align-items-center">
            <button class="btn btn-secondary"> <img src="https://i.imgur.com/wvxPV9S.png" height="100" width="100" />
                </button> <span class="name mt-3">@Model.UserName</span> <span class="idd">@Model.Email</span>
                <div class="d-flex flex-row justify-content-center align-items-center gap-2"> 
                    
                    </div>

            <div class=" d-flex mt-2">
                <a class="btn btn1 btn-dark" asp-controller="Profile" asp-action="EditUser" asp-route-id="@Model.Id">Edit Profile</a>
                            </div>
            <div class=" d-flex mt-2">
                <a class="btn btn1 btn-dark" asp-controller="Account" asp-action="ForgotPassword">Change Password</a>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col text-center ">
                <a class="text-white btn-profile p-2" style="display: block;" asp-controller="Profile" asp-action="FavoriteSongs" asp-route-id="@Model.Id">
                    <img src="~/img/heart.svg" height="35" width="35" style="display: block; margin: 0 auto;" />
                    Favorite
                </a>
            </div>
            <div class="col text-center ">
                <a class="text-white btn-profile p-2" style="display: block;" asp-controller="Profile" asp-action="FollowedSingers" asp-route-id="@Model.Id">
                    <img src="~/img/singer.svg" height="35" width="35" style="display: block; margin: 0 auto;" />
                    Followed
                </a>
            </div>
        </div>
        <form method="post" action="/Account/Logout" class="d-flex justify-content-center">
            @Html.AntiForgeryToken()
            <button class="my-2" id="logout-btn" type="submit">Logout</button>
        </form>
    </div>
</div>

