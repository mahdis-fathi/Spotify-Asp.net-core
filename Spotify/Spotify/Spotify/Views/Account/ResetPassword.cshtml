@model Spotify.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}


<div class="login-7">
    <div class="container">
        <div class="row login-box">
            <div class="col-lg-5 col-md-12 bg-img none-992 col-pad-0 align-self-center">
                <div class="info">
                </div>
            </div>
            <div class="col-lg-7 col-md-12 bg-color-16 align-self-center">
                <div class="form-section">
                    <div class="logo-2 clearfix">
                        <a href="login-7.html">
                            <img src="assets/img/logos/logo-2.png" alt="logo">
                        </a>
                    </div>
                    <h3>Resset your password</h3>
                    <div class="login-inner-form">
                        <form asp-controller="Account" asp-action="ResetPassword" method="post">
                           
                            <div class="form-group form-box">
                                <input asp-for="NewPassword" type="password" name="NewPassword" class="input-text" placeholder="Password">
                                <i class="flaticon-password"></i>
                            </div>
                            <div class="form-group form-box">
                                <input type="password" asp-for="RepeatPass" name="RepeatPass" class="input-text" placeholder="Confirm Password">
                                <i class="flaticon-password"></i>
                            </div>
                            
                            <input hidden="" asp-for="Token" />
                            <input hidden="" asp-for="Username" />
                            <div class="form-group mb-0">
                                <button type="submit" class="btn-md btn-theme btn-block">Reset</button>
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

